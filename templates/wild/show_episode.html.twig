{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Season{% endblock %}

{% block body %}
    {{ dump(program) }}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <!-- <p><a href="{#{{ path('wild_show_season', {id : program.id }) }}#}">Détails de la saison</a></p> -->
            <p><a href="{{ path('wild_show_program', {slug : program.title }) }}">Détails de la série</a></p>
        </div>
    </div>




    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}